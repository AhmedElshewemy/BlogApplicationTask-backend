
# =========================================
# GLOBAL / OS / EDITOR
# =========================================

# macOS Finder files
.DS_Store

# Vim swap files
*.swp

# VSCode / IDE files
/.vscode/
/.idea/

# See https://help.github.com/articles/ignoring-files for more about ignoring files.
#
# If you find yourself ignoring temporary files generated by your text editor
# or operating system, you probably want to add a global ignore instead:
#   git config --global core.excludesfile '~/.gitignore_global'

# Ignore bundler config.
/api/.bundle
/api/vendor/bundle

# Ignore all environment files (except templates).
/.env*
!/.env*.erb

# Ignore all logfiles and tempfiles.
/api/log/*
/api/tmp/*
!/api/log/.keep
!/api/tmp/.keep

# Ignore pidfiles, but keep the directory.
# Ignore Rails pid files
/api/tmp/pids/*
!/api/tmp/pids/
!/api/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
# Ignore Rails storage (Active Storage uploads) and SQLite (if ever used)
/api/storage/*
!/api/storage/.keep
/api/tmp/storage/*
!/api/tmp/storage/
!/api/tmp/storage/.keep


# Ignore credentials (do NOT commit master.key or credentials.yml.enc)
# If you are using Rails encrypted credentials
# Ignore master key for decrypting credentials and more.
/api/config/master.key

/api/config/credentials.yml.enc

# Ignore byproduct/test folders
/api/coverage/
/api/.byebug_history


# Ignore node modules (if your Rails app uses Webpacker or Yarn)
/api/node_modules/
/api/yarn-error.log


# Postgres data (if you mounted a host volume named “postgres_data”)
postgres_data/


# If you create a .dockerignore in api/ or root, ignore that too
/.dockerignore



# Ignore any IntelliJ / RubyMine / Sublime / others
*.tmproj
*.tmproj.*
*.sublime-workspace
*.sublime-project

# Ignore any log files at the root (if accidentally created)
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep



# If you have a sidekiq log file in api/log or similar, you could add:
/api/log/sidekiq.log

# If you store coverage reports elsewhere:
/coverage/
/spec/doc/reports/


# Ignore any test output files
/api/test_output/
# If you use RSpec, you might want to ignore the spec directory
/api/spec/reports/

# If you use Capybara screenshots, you might want to ignore the screenshots directory
/api/spec/screenshots/